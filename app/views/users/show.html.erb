<div class="media">
  <div class="media-body">
    <div>
      <h1 class="text-center">My Blocmarks</h1>
      <% @user_topics.each do |topic| %>
        <h3><%= link_to "#" + topic.title, topic %></h3>
        <div class="row">
          <% topic.bookmarks.each do |bookmark| %>
            <div class="col-sm-3">
              <div class="img-thumbnail text-center">
                <%= render partial: 'bookmarks/thumbnail', locals: { bookmark: bookmark } %>
              </div>
              </br>
              <div class="text-center">
                <%= link_to "Delete", bookmark, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this bookmark?'} %></h1>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    </br>
    <div>
      <h1 class="text-center">Liked Blocmarks</h1>
      <% if @liked_bookmarks.empty? %>
         <p class="text-center"> No liked bookmarks added yet. </p>
      <% end %>
      <div class="row">
        <% @liked_bookmarks.each do |like| %>
          <div class="col-sm-3">
            <div class="img-thumbnail text-center">
              <%= render partial: 'bookmarks/thumbnail', locals: { bookmark: like.bookmark } %>
            </div>
            </br>
            <div class="text-center">
              <%= render partial: 'likes/like', locals: { bookmark: like.bookmark } %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="footer navbar-fixed-bottom text-center">
  <small class="text-muted">Website thumbnails by <a href="https://www.bitpixels.com/">BitPixels</a></small>
</div>
