<h1><%= @bookmark.url %>
<% if policy(@bookmark).edit? %>
  <%= link_to "Edit Bookmark", edit_topic_bookmark_path(@bookmark.topic, @bookmark), class: 'btn btn-success' %>
<% end %>

<% if policy(@bookmark).destroy? %>
<%= link_to "Delete Bookmark", [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this bookmark?'} %></h1>
<% end %>
<br/>
<%= link_to "Back to All Blockmarks", topics_path, class: 'btn btn-info' %>
<br/>
<%= render partial: 'likes/like', locals: {bookmark: @bookmark} %>
