<!DOCTYPE html>
<html>
  <head>
    <title>Blocmarks</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "Blocmarks", root_path, class: "navbar-brand" %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item"><%= link_to "About", about_path %></li>
      </ul>
      <div class="my-2 my-lg-0">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
              <div class="dropdown">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <%= current_user.name %>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                  <a class="dropdown-item"><%= link_to "Edit Profile", edit_user_registration_path %></a>
                  <a class="dropdown-item"><%= link_to "My Blocmarks", topics_path %></a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></a>
                </div>
              </div>
          <% else %>
            <li class="nav-item"><%= link_to "Sign Up", new_user_registration_path %></li>
            <li class="nav-item"><%= link_to "Sign In", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <br>
    <div class="container">
      <% if flash[:notice] %>
         <div class="alert alert-success">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:notice] %>
         </div>
      <% elsif flash[:alert] %>
         <div class="alert alert-warning">
           <button type="button" class="close" data-dismiss="alert">&times;</button>
           <%= flash[:alert] %>
         </div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
