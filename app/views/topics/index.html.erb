<h1 class=text-center>All Blocmarks <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %></h1>
<div class="media">
  <div class="media-body">
    <% @topics.each do |topic| %>
        <h3 class="media-heading">
           <%= link_to "#" + topic.title, topic %>
        </h3>
        <% if topic.bookmarks.empty? %>
           <p class="text-center"> No Bookmarks added yet. </p>
        <% end %>
       <div class="row">
       <% topic.bookmarks.each do |bookmark| %>
        <div class="col-sm-3">
          <div class="img-thumbnail text-center">
            <%= render partial: 'bookmarks/thumbnail', locals: { bookmark: bookmark } %>
          </div>
          </br>
          <div class="text-center">
            <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
          </div>
          </br>
        </div>
       <% end %>
       </div>
    <% end %>
  </div>
</div>
<div class="footer navbar-fixed-bottom text-center">
  <small class="text-muted">Website thumbnails by <a href="https://www.bitpixels.com/">BitPixels</a></small>
</div>
