<h1 class="text-center"><%= @topic.title %>
<%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %></h1>
<%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>

<div class="row">
  <% @topic.bookmarks.each do |bookmark| %>
  <div class="col-sm-3">
    <div class="img-thumbnail text-center ">
      <p><%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %></p>
    </div>
  </div>
  <% end %>
</div>
