<h1 class="text-center"><%= @topic.title %>
<%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success btn-sm' %>
<%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: 'Are you sure you want to delete this topic?'} %></h1>
<%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success btn-sm' %>
<br>
<br>
<div class="row">
  <% @topic.bookmarks.each do |bookmark| %>
    <div class="col-sm-3">
      <div class="img-thumbnail text-center">
        <%= render partial: 'bookmarks/thumbnail', locals: { bookmark: bookmark } %>
      </div>
      </br>
      <div class = "text-center">
        <% if policy(bookmark).edit? %>
          <%= link_to "Edit", edit_topic_bookmark_path(@topic, bookmark), class: 'btn btn-success btn-sm' %>
        <% end %>

        <% if policy(bookmark).destroy? %>
          <%= link_to "Delete", [bookmark.topic, bookmark], method: :delete, class: 'btn btn-danger btn-sm' %>
        <% end %>

        <%= render partial: 'likes/like', locals: { bookmark: bookmark } %>
      </div>
    </div>
  <% end %>
</div>
</br>
<div class="footer navbar-fixed-bottom text-center">
  <small class="text-muted">Website thumbnails by <a href="https://www.bitpixels.com/">BitPixels</a></small>
</div>
